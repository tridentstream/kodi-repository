<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="plugin.video.tridentstream" name="Tridentstream" provider-name="Anders Jensen" version="1.0.0">
  <requires>
    <import addon="xbmc.python" version="2.24.0" />
  </requires>
  <extension library="addon.py" point="xbmc.python.pluginsource">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>en</language>
    <summary lang="en">Tridentstream client addon for Kodi</summary>
    <description lang="en">Tridentstream client addon for Kodi</description>
    <disclaimer lang="en">Dancing is forbidden?</disclaimer>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
  <extension library="service.py" point="xbmc.service" start="login" />
</addon><addon id="repository.tridentstream" name="Tridentstream Kodi Addons" provider-name="JohnDoee [JohnDoee@github]" version="1.0.0">
        <extension name="Tridentstream Addons" point="xbmc.addon.repository">
                <info compressed="false">https://kodi.tridentstream.org/stable/addons.xml</info>
                <checksum>https://kodi.tridentstream.org/stable/addons.xml.md5</checksum>
                <datadir zip="true">https://kodi.tridentstream.org/beta/</datadir>
        </extension>
        <extension point="xbmc.addon.metadata">
                <summary>Install Tridentstream Addons</summary>
                <description>Download and install addons for Tridentstream</description>
                <platform>all</platform>
        </extension>
</addon></addons>